            android:name=".MainShowCaseActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ButtonShowcaseActivity"
            android:exported="false" />
        <activity
            android:name=".SearchShowcaseActivity"
            android:exported="false" />
        <activity
            android:name=".SelectShowcaseActivity"
            android:exported="false" />
        <activity
            android:name=".InputFieldShowcaseActivity"
