<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/input_bg"
    android:paddingStart="16dp"
    android:paddingTop="14dp"
    android:paddingEnd="16dp"
    android:paddingBottom="14dp"
    tools:parentTag="android.widget.FrameLayout">

    <ImageView
        android:id="@+id/select_icon_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        tools:src="@drawable/uikit_ic_emoji_placeholder"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/select_text"
        style="@style/UIKit.TextAppearance.InputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_weight="1"
        tools:text="Мужской" />

    <ImageView
        android:id="@+id/select_icon_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/select_icon_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="8dp"
        android:src="@drawable/uikit_ic_dropdown_arrow" />
</merge>