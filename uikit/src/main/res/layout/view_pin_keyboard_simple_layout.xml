<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3">

        <TextView
            android:id="@+id/pin_key_1"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="1" />

        <TextView
            android:id="@+id/pin_key_2"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="2" />

        <TextView
            android:id="@+id/pin_key_3"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="3" />

        <TextView
            android:id="@+id/pin_key_4"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="4" />

        <TextView
            android:id="@+id/pin_key_5"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="5" />

        <TextView
            android:id="@+id/pin_key_6"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="6" />

        <TextView
            android:id="@+id/pin_key_7"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="7" />

        <TextView
            android:id="@+id/pin_key_8"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="8" />

        <TextView
            android:id="@+id/pin_key_9"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="9" />

        <TextView
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="0"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pin_key_0"
            style="@style/UIKit.Widget.PinKeyButton"
            android:text="0" />

        <ImageButton
            android:id="@+id/pin_key_backspace"
            android:layout_width="@dimen/pin_key_size"
            android:layout_height="@dimen/pin_key_size"
            android:layout_marginStart="@dimen/pin_key_margin"
            android:layout_marginTop="@dimen/pin_key_margin"
            android:layout_marginEnd="@dimen/pin_key_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pin_keyboard_backspace_description"
            android:padding="@dimen/pin_key_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_backspace_pin"
            app:tint="@color/black" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pin_key_margin"
        android:gravity="center"
        android:orientation="horizontal"> <!-- Отступ как у кнопок -->

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>