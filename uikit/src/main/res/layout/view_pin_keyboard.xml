<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/pin_key_1"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/pin_key_4"
        app:layout_constraintEnd_toStartOf="@id/pin_key_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/pin_key_2"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_1"
        app:layout_constraintEnd_toStartOf="@id/pin_key_3"
        app:layout_constraintStart_toEndOf="@id/pin_key_1"
        app:layout_constraintTop_toTopOf="@id/pin_key_1" />

    <TextView
        android:id="@+id/pin_key_3"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pin_key_2"
        app:layout_constraintTop_toTopOf="@id/pin_key_2" />

    <TextView
        android:id="@+id/pin_key_4"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/pin_key_7"
        app:layout_constraintEnd_toStartOf="@id/pin_key_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_key_1" />

    <TextView
        android:id="@+id/pin_key_5"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_4"
        app:layout_constraintEnd_toStartOf="@id/pin_key_6"
        app:layout_constraintStart_toEndOf="@id/pin_key_4"
        app:layout_constraintTop_toTopOf="@id/pin_key_4" />

    <TextView
        android:id="@+id/pin_key_6"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pin_key_5"
        app:layout_constraintTop_toTopOf="@id/pin_key_5" />

    <TextView
        android:id="@+id/pin_key_7"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/pin_key_0"
        app:layout_constraintEnd_toStartOf="@id/pin_key_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_key_4" />

    <TextView
        android:id="@+id/pin_key_8"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_7"
        app:layout_constraintEnd_toStartOf="@id/pin_key_9"
        app:layout_constraintStart_toEndOf="@id/pin_key_7"
        app:layout_constraintTop_toTopOf="@id/pin_key_7" />

    <TextView
        android:id="@+id/pin_key_9"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pin_key_8"
        app:layout_constraintTop_toTopOf="@id/pin_key_8" />

    <TextView
        android:id="@+id/pin_key_0"
        style="@style/UIKit.Widget.PinKeyButton"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pin_key_8"
        app:layout_constraintStart_toStartOf="@id/pin_key_8"
        app:layout_constraintTop_toBottomOf="@id/pin_key_7" />

    <ImageButton
        android:id="@+id/pin_key_backspace"
        android:layout_width="@dimen/pin_key_size"
        android:layout_height="@dimen/pin_key_size"
        android:layout_marginStart="@dimen/pin_key_margin"
        android:layout_marginEnd="@dimen/pin_key_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pin_keyboard_backspace_description"
        android:padding="@dimen/pin_key_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_backspace_pin"
        app:layout_constraintBottom_toBottomOf="@id/pin_key_0"
        app:layout_constraintEnd_toEndOf="@id/pin_key_9"
        app:layout_constraintStart_toStartOf="@id/pin_key_9"
        app:layout_constraintTop_toTopOf="@id/pin_key_0"
        app:tint="@color/black" />

</merge>